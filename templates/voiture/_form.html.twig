<div class="card">
    <h5 class="card-header">Basic Form</h5>
    <div class="card-body">
        {{ form_start(form) }}
            <div class="form-group">
                <label for="voiture_marque" class="col-form-label">Marque</label>
                {{ form_widget(form.marque, {'attr' : {'class' : 'form-control', 'placeholder' : 'tapez la marque...'}}) }}
            </div>
            <div class="form-group">
                <label for="voiture_color" class="col-form-label">Color</label>
                {{ form_widget(form.color, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label for="voiture_type" class="col-form-label">Type</label>
                {{ form_widget(form.type, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label for="voiture_prix" class="col-form-label">Prix</label>
                {{ form_widget(form.prix, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label for="voiture_photo" class="col-form-label">photo</label>
                {{ form_widget(form.photo, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="form-group">
                <button class="btn btn-success">{{ button_label|default('Save') }}</button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
